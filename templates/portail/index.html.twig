{% extends 'base.html.twig' %}
{% block titre %}Le N°1 de l'engrais BIO en Côte d'Ivoire{% endblock %}

{% block body %}

<div class="hero-area hero-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 offset-lg-2 text-center">
                <div class="hero-text">
                    <div class="hero-text-tablecell">
                        <p class="subtitle">100% bio</p>
                        <h1>Le N°1 de l'engrais BIO en Côte d'Ivoire</h1>
                        <div class="hero-btns">
                            <a href="shop.html" class="boxed-btn">Collections AGROMAX</a>
                            <a href="contact.html" class="bordered-btn">Nous contacter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end hero area -->

<!-- features list section -->
<div class="list-section p-4 bg-success">
    <div class="container">

        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <div class="list-box d-flex align-items-center">
                    <div class="list-icon">
                        <i class="fas fa-shipping-fast ext-light"></i>
                    </div>
                    <div class="content">
                        <h3 class="text-light">Livraison rapide</h3>
                        <p  class="text-light">03 jours maximum</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <div class="list-box d-flex align-items-center">
                    <div class="list-icon">
                        <i class="fas fa-phone-volume ext-light"></i>
                    </div>
                    <div class="content">
                        <h3  class="text-light">24/7 Support</h3>
                        <p  class="text-light">A votre écoute permanemment</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="list-box d-flex justify-content-start align-items-center">
                    <div class="list-icon">
                        <i class="fas fa-sync text-light"></i>
                    </div>
                    <div class="content">
                        <h3  class="text-light">Satisfaction</h3>
                        <p  class="text-light">Retour sur investissement!</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- end features list section -->

<!-- logo carousel -->
<div class="">
    <div class="">
        <div class="section-title text-center mt-5">
            <h2><span class="orange-text">Votre projet agricole est le </span> NOTRE</h2>
        </div>
        <div class="row bg-light">
            <div class="col-lg-12">
                <div class="logo-carousel-inner">
                    {% for elemeent in categories_pdt %}
                        <div class="">
                            <div class="card-body single-logo-item fa-border-none">
                                <img class="" src="uploads/media/{{ elemeent.imageCategorie }}" height="120" alt="{{ elemeent.slug }}">
                            </div>
                            <div class="text-center"><a class="cart-btn" href="#">{{ elemeent.libelle }}</a></div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end logo carousel -->

<!-- product section -->
<div class="product-section mt-10 mb-150 pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">Nos </span> Produits</h3>
                    <p></p>
                </div>
            </div>
        </div>

        <div class="row">
            {% for produit in produits %}
                <div class="col-lg-4 col-md-6 text-center">
                    <div class="single-product-item">
                        <div class="product-image">
                            <a href="#"><img src="uploads/media/{{ produit.imageProduit }}" alt="{{ produit.libelle }}"></a>
                        </div>
                        <h3>{{ produit.libelle }}</h3>
                        <p class="product-price"><span>bidon</span> {{ produit.prix }} </p>
                        <a href="#" class="cart-btn"><i class="fas fa-shopping-cart"></i> Ajouter au panier</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <h4 class="text-center m-3 text-dark"><a href="#" class="btn-success p-3 rounded-4"><i class="fas fa-shopping-cart"></i> Visiter la boutique</a></h4>
    </div>
</div>
<!-- end product section -->

<!-- testimonail-section -->
