{% extends 'base.html.twig' %}

{% block title %}Nos contatcs{% endblock %}

{% block body %}

    <!--PreLoader-->
    <div class="loader">
        <div class="loader-inner">
            <div class="circle"></div>
        </div>
    </div>

    <!-- breadcrumb-section -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Bénéficiez de notre support 24/7 </p>
                        <h1>Contactez-nous</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb section -->

    <!-- contact form -->
    <div class="contact-from-section mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-5 mb-lg-0">
                    <div class="form-title">
                        <h2 style="color: orangered">Avez-vous une question ?</h2>
                        <p class="text-primary"><i>AGRIDEVAF reponds à toutes vos inquiétudes et préoccupations sur toutes les questions relatives à nos produits. Trouvez nous en boutique ou laissez nous un message</i></p>
                    </div>
                    <div id="form_status"></div>
                    <div class="contact-form">
                        {{ form_start(form, {'attr': {novalidate: 'novalidate', id: 'fruitkha-contact'}}) }}
                            <p>
                                {{ form_row(form.nom) }}
                                {{ form_row(form.email) }}
                            </p>
                            <p>
                                {{ form_row(form.telephone) }}
                                {{ form_row(form.sujet) }}
                            </p>
                            <p>{{ form_row(form.message) }}</p>

                            <p><input type="submit" value="Submit"></p>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="contact-form-wrap">
                        <div class="contact-form-box">
                            <h4><i class="fas fa-map"></i> Localisation de la boutique</h4>
                            <p>Carrefour Faya <br> Cocody, Abidjan <br> Côte d'Ivoire</p>
                        </div>
                        <div class="contact-form-box">
                            <h4><i class="far fa-clock"></i> Ouverture de la boutique</h4>
                            <p>Lundi - Vendredi: 08h à 17h30 <br> Samedi: 09h à 17h </p>
                        </div>
                        <div class="contact-form-box">
                            <h4><i class="fas fa-address-book"></i> Contacts</h4>
                            <p>Mobile: +225 07 079 428 04 <br> Email: info@agridevaf.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end contact form -->

    <!-- find our location -->
    <div class="find-location blue-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p> <i class="fas fa-map-marker-alt"></i> Retrouvez notre adresse</p>
                </div>
            </div>
        </div>
    </div>
    <!-- end find our location -->

    <!-- google map section -->
    <div class="embed-responsive embed-responsive-21by9">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d26432.42324808999!2d-118.34398767954286!3d34.09378509738966!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c2bf07045279bf%3A0xf67a9a6797bdfae4!2sHollywood%2C%20Los%20Angeles%2C%20CA%2C%20USA!5e0!3m2!1sen!2sbd!4v1576846473265!5m2!1sen!2sbd" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" class="embed-responsive-item"></iframe>
    </div>
    <!-- end google map section -->

{% endblock %}
