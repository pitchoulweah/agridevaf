<!-- infos section -->
<div class="mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">Dernieres </span> infos</h3>
                    <p><a href="#">Abonnez-vous à la newsletter</a></p>
                </div>
            </div>
        </div>
        <article class="mx-auto">
            <div class="single-latest-news row mb-100 p-2">
                <div class="col-md-4">
                    <img class="rounded-3 img-fluid" src="/uploads/media/{{last_articles.featuredImage.filename}}" alt="{{ last_articles.featuredImage.altText }}" loading="lazy"  height="60%">
                </div>
                <div class="news-text-box col-md-8">
                    <h3 style="font-family: Cursif;color: orangered">A la une</h1>
                        <h3 class="text-danger"><a href="{{last_articles.slug}}">{{ last_articles.title }}</a></h3>
                        <p class="blog-meta">
                            <span class="author"><i class="fas fa-user"></i>agridevaf</span>
                            <span class="date"><i class="fas fa-calendar"></i>{{ last_articles.createdAt|date('d m Y') }}</span>
                        </p>
                        <p class="excerpt">{{ last_articles.featuredText ?: last_articles.content | striptags|slice(0, 130) - '...' }}</p>
                        <a href="#" class="read-more-btn">Lire l'article <i class="fas fa-angle-right"></i></a>
                </div>
            </div>
        </article>

        {#{% include 'blog/produit/list.html.twig' with { articles } %}#}
        <div class="latest-news">
            <div class="container mx-auto">
                <div class="row">
                    {% for article in articles_blog %}

                        <div class="col-lg-4 col-md-6 mx-auto">
                            <div class="single-latest-news">
                                <a href="#">
                                    {% if article.featuredImage %}
                                        <a href="{{article.slug}}" class="link-primary">
                                            <img src="/uploads/media/{{article.featuredImage.filename}}" alt="{{ article.featuredImage.altText }}" loading="lazy" width="350" height="200">
                                        </a>
                                    {% endif %}
                                </a>
                                <div class="news-text-box">
                                    <h3><a href="{{article.slug}}">{{ article.title }}</a></h3>
                                    <p class="blog-meta">
                                        <span class="author"><i class="fas fa-user"></i>agridevaf</span>
                                        <span class="date"><i class="fas fa-calendar"></i>{{ article.createdAt|date('d m Y') }}</span>
                                    </p>
                                    <p class="excerpt">{{ article.featuredText ?: article.content | striptags|slice(0, 130) - '...' }}</p>
                                    <a href="#" class="read-more-btn">Lire l'article <i class="fas fa-angle-right"></i></a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div></div></div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <a href="news.html" class="boxed-btn">Plus d'actualités</a>
            </div>
        </div>
    </div>
</div>
